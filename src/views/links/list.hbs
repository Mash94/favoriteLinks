<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href={{this.url}} target="_blank">
                            <h3 class="card-title text-uppercase">{{this.title}}</h3>
                        </a>
                        <p class="m-2"> {{this.description}} </p>
                        <p>{{timeago this.created_at}}</p>
                        <form action="/links/delete" method="post" id="eliminarcard{{this.id}}">
                            <input style="display: none;" name='id' value={{this.id}}>
                            <button class="btn btn-danger" type="button" onclick="eliminar({{this.id}})">Delete Link - POST</button>
                        </form>
                        <a href="/links/delete/{{this.id}}" class="btn btn-danger" >Delete Link - GET</button></a>
                        <form action="/links/editar" method="post" id="modificarcard{{this.id}}">
                            <input style="display: none;" name='id' value={{this.id}}>
                            <button class="btn btn-secondary" type="button" onclick="modificar({{this.id}})">Edit Link</button>
                        </form>
                        
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are no links saved yet</p>
                    <a href="/links/add">Create One!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<script>
    const eliminar = (id) => document.getElementById(`eliminarcard${id}`).submit()
    const modificar = (id) => document.getElementById(`modificarcard${id}`).submit()
</script>